// captions
$caption
  @extends $proxima
  color light-gray
  font-size 14px
  line-height 20px
  a
    color inherit
  em,
  cite
    font-family inherit !important
    font-style italic !important

// captions for full width items, full screen gallery
$caption-big
  @extends $proxima
  color light-gray
  font-size 16px
  line-height 22px
  a
    color inherit

$card-base
  *zoom 1
  background white
  border-radius 1px
  border-top 3px solid black
  box-shadow 0 0 4px light-gray
  margin-bottom 13px
  position relative
  width 100%
  &:before
  &:after
    content ''
    display table
  &:after
    clear both

// credits
$credit
  display inline
  font-family oxide
  font-size 10px
  font-style normal
  font-weight 400
  letter-spacing .08em
  line-height inherit
  text-transform uppercase
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit
  img
    display inline-block
    margin 0 3px -1px 7px
    max-width 18px

// body copy
$exchange
  font-family exchange
  font-size 17px
  font-weight 400
  line-height 27px

// italic
$exchange-italic
  font-family exchangeItal
  font-style normal

// small exchange spec for smart cards
$exchange-small
  font-family exchange
  font-size 13px
  font-weight 400
  line-height 16px

$clearfix
  *zoom 1
  clear both
  &:before
  &:after
    content ''
    display table
  &:after
    clear both

// blue underlines under text
$link-underline
  border-bottom 3px solid light-blue
  box-shadow inset 0 -5px 0 light-blue
  color inherit
  transition background .15s cubic-bezier(.33, .66, .66, 1)
  &:hover,
  &:focus,
  &:active
    background light-blue

// dark blue underline for dark bg
$link-underline-dark
  border-bottom 3px solid dark-blue
  box-shadow inset 0 -5px 0 dark-blue
  color inherit
  transition background .15s cubic-bezier(.33, .66, .66, 1)
  &:hover,
  &:focus,
  &:active
    background dark-blue

// remove list styles from article lists
$list-none
  list-style none
  li:before
    content ''
    margin 0
    width 0

// meta text (usually information that isn't a byline)
$meta-text
  color light-gray
  font-family oxide
  font-size 10px
  font-weight 400
  letter-spacing .08em
  line-height 9px
  text-transform uppercase
  transition all .15s cubic-bezier(.33, .66, .66, 1)
  a
    color inherit
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit
  .metadata &
    white-space nowrap
  #prefooter &
    margin 4px 0 0

// a card with multiple item gets this
$multiple-item-card
  border-top 10px solid black
  .heading
    padding 13px

// no underline under links
$no-underline
  border-bottom 0
  box-shadow none
  color inherit
  text-decoration none
  &:hover,
  &:focus,
  &:active
    background transparent

$oxide
  font-family oxide
  font-style normal
  font-weight 400
  letter-spacing .08em
  text-transform uppercase
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit

// this is from paravel, and how they defined the max-width of the site
$site-container
  margin 0 auto
  max-width 970px // width of billboard ad
  position relative
  width 93.75% // 300/320 (Width of Ads / Width of Phone)
  // @media(min-width 768px)
    // width 94.75% // 728/768 (Width of Leaderboard / Width of iPad)
  // .thin &
  //   max-width 929px

// a card with 1 item gets this
$single-item
  border-top 3px solid black
  padding 13px

// sub headers (header tags in a post, card headers)
$sub-header
  @extends $ambroise
  font-size 45px
  line-height 37px
  text-transform uppercase

$tungsten
  font-family tungsten
  font-style normal
  font-weight 400
  text-transform uppercase
  -webkit-font-smoothing antialiased
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit

// Hide only visually, but have it available for screenreaders
$visually-hidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px
