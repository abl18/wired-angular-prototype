/**
 * All extends, code bits that are reused a lot, don't generate extra css
*/

$ambroise
  font-family ambroise
  font-style normal
  font-weight 400
  text-transform uppercase
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit

$big-title
  font-size 32px
  line-height 32px

$proxima
  font-family proxima
  font-style normal
  font-weight 400
  em,
  cite
    font-family inherit
    font-style italic
    line-height inherit

$proxima-uppercase
  @extends $proxima
  letter-spacing .08em
  text-transform uppercase

$button-base
  background lightest-gray
  // border-bottom 0
  border-radius 3px
  box-shadow none
  color light-gray
  font-family oxide
  font-size 10px
  padding 7px 13px
  transition background .15s cubic-bezier(.33, .66, .66, 1)

