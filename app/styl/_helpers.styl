/**
 * Helper classes (floats, clears, colors, blah blah)
*/

// color helperz
for key, value in (all-colors)
  .{key}
    color value
  .{key}-bg
    background value

// proxima uppercase author bylines
.author,
.attribution,
.byline
  @extends $meta-text

.clearfix
  *zoom 1
  &:before
  &:after
    content ''
    display table
  &:after
    clear both

// inline credit for captions (photographer, illustrator, etc)
.credit
  @extends $credit

