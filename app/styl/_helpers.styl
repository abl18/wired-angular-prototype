.float-l
  float left

.float-r
  float right

.hdr
  @extends $sub-header
  border-bottom 1px solid lighter-gray
  padding 13px

/**
 * used when we want to combine transforms / transitions with display none or display block
 * relies on the prepareTransition jQuery plugin
*/
.is-transitioning
  display block!important
  visibility visible!important

// remove list styles from article lists
.list-none
  list-style none!important
  li:before
    content ''!important
    margin 0!important
    width 0!important

.margin-bottom
  margin-bottom 25px

.margin-top
  margin-top 25px

// general meta text everywhere
.meta
  @extends $meta-text
  display block
  white-space nowrap

.no-border
  border none!important
.no-margin
  margin 0!important
.no-margin-top
  margin-top 0!important
.no-padding
  padding 0!important
.no-padding-top
  padding-top 0!important
.no-scroll
  overflow hidden
.padding
  padding 13px
.padding-big
  padding 25px
.padding-bottom
  padding-bottom 13px
.padding-left-big
  padding-left 25px
.padding-left-right
  padding-left 13px
  padding-right 13px
.padding-top
  padding-top 13px
.no-padding-top
  padding-top 0!important

.hide
  display none!important

.show
  display block!important

.text-center
  text-align center

// class version for applying via js / production
.visually-hidden
  @extends $visually-hidden

// mobile > small tablet helpers
+media('mob')
  .hide-mobile
    display none!important
  .show-mobile
    display block

// small tablet helpers
+media('small-tab')
  .hide-small-tablet
    display none!important
  .show-small-tablet
    display block
  // .small-tablet-omega
