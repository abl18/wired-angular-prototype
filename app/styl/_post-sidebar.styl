/**
 * the sticky sidebar in posts
 * so much media query, for hide / show of articles (will probably do differently)
*/


// not sticky, the element that the sticky part moves in
#sidebar
  background white
  position relative
  margin 0 0 25px
  +media('sm-tab-plus')
    absolute top 50px right 0 bottom 0
    margin 0
    width 300px
    .wide &
      top 0

// the part that is sticky
#sidebar-wrap
  width 100%
  +media('palm-max')
    display none
  +media('sm-tab-plus')
    overflow hidden
    width 300px
  &.headroom--top
    .wide &
      position absolute
      top 0

#sidebar-wrap
  .card
    margin-bottom 0
    max-height 580px
  &.headroom--not-top
    .card
      @media (max-height 650px) and (min-width 639px)
        height 173px
      @media (min-height 650px) and (max-height 750px) and (min-width 639px)
        height 273px
      @media (min-height 750px) and (max-height 850px) and (min-width 639px)
        height 373px
      @media (min-height 850px) and (max-height 950px) and (min-width 639px)
        height 473px
  &.headroom--top
    .card
      @media (max-height 750px) and (min-width 639px)
        height 173px
      @media (min-height 750px) and (max-height 850px) and (min-width 639px)
        height 273px
      @media (min-height 870px) and (max-height 970px) and (min-width 639px)
        height 373px
      @media (min-height 970px) and (max-height 1070px) and (min-width 639px)
        height 473px